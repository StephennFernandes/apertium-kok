<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="kon-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="kon.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="kon-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="kon.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="kon-tagger" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="kon.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="kon.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="kon-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="kon.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-kon.kon.rlx"/>
      </program>
    </pipeline>
  </mode>

</modes>

